<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    tools:context="com.example.root.remoteapp.MainActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/my_nanodegree_apps"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="83dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_centerHorizontal="true"
        android:id="@+id/linearLayout"
        android:orientation="vertical">

        <Button
            android:id="@+id/popular_movies"
            android:text="@string/popular_movies"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout"
            android:layout_centerHorizontal="true"
            android:background="#2E3D49"
            android:textColor="#fff"
            android:layout_marginTop="10dp"/>

        <Button
            android:id="@+id/stock_hawk"
            android:text="@string/stock_hawk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout"
            android:layout_centerHorizontal="true"
            android:background="#2E3D49"
            android:textColor="#fff"
            android:padding="5dp"
            android:layout_marginTop="10dp"/>

        <Button
            android:id="@+id/build_it_bigger"
            android:text="@string/build_it_bigger"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout"
            android:layout_centerHorizontal="true"
            android:background="#2E3D49"
            android:textColor="#fff"
            android:layout_marginTop="10dp"
            />

        <Button
            android:id="@+id/make_your_app_material"
            android:text="@string/make_your_app_material"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout"
            android:layout_centerHorizontal="true"
            android:background="#2E3D49"
            android:textColor="#fff"
            android:layout_marginTop="10dp"
            android:padding="5dp"/>

        <Button
            android:id="@+id/go_ubiquitous"
            android:text="@string/go_ubiquitous"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout"
            android:layout_centerHorizontal="true"
            android:background="#2E3D49"
            android:textColor="#fff"
            android:layout_marginTop="10dp"
            />

        <Button
            android:id="@+id/capstone"
            android:text="@string/capstone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout"
            android:layout_centerHorizontal="true"
            android:background="#2E3D49"
            android:textColor="#fff"
            android:layout_marginTop="10dp"/>

    </LinearLayout>



</RelativeLayout>
